        h3
            font-size 24px
            font-weight bold
            position absolute
            top -26px
            left 0px
            //opacity .5
            text-transform uppercase
            font-family "Karantina"
            font-weight 400

        &.poke-details
            //margin-top -20px

        &.poke-spells
            &.poke-spells-hidden
                //border-color cast(black 30%)
                //border-bottom-width 1px
                background cast(tan 20%)
                margin-top -10px
                h3
                    letter-spacing .5px
                    font-weight 300
                    font-size 18px
                    line-height 30px
            h4 
                font-size 16px
                font-weight bold
                margin-bottom 4px
                display inline-block
            p
                font-size 13px
                line-height 20px
                font-weight 500

    ul.poke-details-list
        li
            box(flex row nowrap, start center, 0 1)
            padding 4px
            span:nth-child(1)
                font-weight bold
            span:nth-child(2)
                text-align right
                border-bottom 1px dotted cast(black 60%)
                //font-style italic

    ul.poke-spells-list
        li
            //box(flex row nowrap, start center, 0 1)
            padding 4px
            span
                font-weight bold
                margin-bottom 12px
                display block
            ul
                width 100%
                padding 0 0 5px 5px
                li
                    border-bottom 1px dotted cast(black 60%)
                    margin 4px 0 35px
                    padding-left 8px
                    border-radius 3px 3px 0 0
                    box(flex row nowrap, start start, "1 0 180px" 1)
                    & > h4 
                        padding-right 14px
                    &:last-child
                        border-bottom 0
                        margin-bottom 0
                        padding-bottom 0
                        p
                            margin-bottom 0
                

    ul.poke-chain
        box(flex row wrap, center end, 1)
        h5
            margin 0
        .poke-chain-link
            position relative
            text-align center
            a
                display block
            &.current
                cursor default
                pointer-events none
                h5
                    background #000
                    color #fff
                    border-radius 4px
            h5
                font-size 14px
                letter-spacing -.25px
                margin 0
                padding 2px 10px
                display inline-block
            &:last-child
                .arrow-chain-icon
                    display none
        .poke-chain-link-image
            position relative
            img
                max-width 80px
                max-height 60px
            .arrow-chain-icon
                position absolute
                transform translate(50%, -50%)
                top 50%
                right 0
                color cast(black 20%)


svg#Layer_1
    width 150%
    height auto
    max-height 600px
    max-width 600px
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    z-index -1

    .st0, .st1, .st2, .st3
        fill none
        stroke cast(white 6%)
        stroke-width 42
        stroke-miterlimit 10

    .st0 
        stroke-dasharray 12.1947,12.1947,12.1947,12.1947,12.1947,12.1947

    .st1
        stroke-dasharray 50,90,200,30,40,0

    .st2
        stroke-linecap square
        stroke-dasharray 120, 20, 110, 20, 140

    .st3
        stroke-width 16
        stroke-linecap square

@keyframes shine 
    0%
        transform translateX(-100%) translateY(-100%) rotate(30deg)
    40%
        transform translateX(-100%) translateY(-100%) rotate(30deg)
    50%
        transform translateX(100%) translateY(100%) rotate(30deg)

